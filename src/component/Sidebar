import React, { useState } from 'react';

const Sidebar = ({ categories, onCategoryClick }) => {
  return (
    <div className="sidebar">
      <ul>
        {categories.map((category, index) => (
          <li key={index} onClick={() => onCategoryClick(category)}>
            {category}
          </li>
        ))}
      </ul>
    </div>
  );
};

export default Sidebar;
